#include <stdio.h>
int main() {
    int n;
    printf("Nhap so phan tu n: ");
    scanf("%d", &n);
    int arr[n];
    int i;
    long long sum = 0;
    printf("Nhap %d gia tri nguyen:\n", n);
    for (i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
        sum += arr[i];
    }
    float average = (float)sum / n;
    printf("Gia tri trung binh cua mang la: %.2f\n", average);

    return 0;
}
