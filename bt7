#include <stdio.h>

int main() {
    int n, i, j, temp;
    printf("Nhap so luong phan tu cua mang: ");
    scanf("%d", &n);
    int a[n];
    printf("Nhap cac phan tu cua mang:\n");
    for (int k = 0; k < n; k++) {
        scanf("%d", &a[k]);
    }
    printf("Mang ban dau:\n");
    for (int k = 0; k < n; k++) {
        printf("%d ", a[k]);
    }
    printf("\n");
    i = 0;
    j = n - 1;
    while (i < j) {
        temp = a[i];
        a[i] = a[j];
        a[j] = temp;
        i++;
        j--;
    }
    printf("Mang sau khi dao nguoc:\n");
    for (int k = 0; k < n; k++) {
        printf("%d ", a[k]);
    }
    printf("\n");

    return 0;
}
